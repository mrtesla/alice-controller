<%= semantic_form_for [@core_application, @pluto_environment_variable] do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name, input_html: { disabled: !@pluto_environment_variable.new_record? } %>
    <%= f.input :value, as: :text %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button :button_html => {:class => "primary"} %>
    <% unless @pluto_environment_variable.new_record? %>
      <%= link_to 'Revert to default', [@core_application, @pluto_environment_variable], method: 'delete', class: 'btn danger' %>
    <% end %>
  <% end %>
<% end %>
