<%= semantic_form_for [@core_application, @pluto_process_definition] do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name, input_html: { disabled: !@pluto_process_definition.new_record? } %>
    <%= f.input :concurrency %>
  <% end %>
  <%= f.buttons do %>
    <%= f.commit_button button_html: {class: "primary"} %>
    <% unless @pluto_process_definition.new_record? %>
      <%= link_to 'Revert to default', [@core_application, @pluto_process_definition], method: 'delete', class: 'btn danger' %>
    <% end %>
  <% end %>
<% end %>
