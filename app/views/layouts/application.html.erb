<!DOCTYPE html>
<html>
<head>
  <title>Alice</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="topbar" data-dropdown="dropdown">
  <div class="fill">
    <div class="container">
      <a class="brand" href="#">Alice</a>
      <% if current_user %>
      <ul class="nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle">Core</a>
          <ul class="dropdown-menu">
            <li><a href="/core/applications">Applications</a></li>
            <li><a href="/core/machines">Machines</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle">HTTP</a>
          <ul class="dropdown-menu">
            <li><a href="/http/routers">Routers</a></li>
            <li><a href="/http/passers">Passers</a></li>
            <li><a href="/http/backends">Backends</a></li>
          </ul>
        </li>
      </ul>
      <ul class="nav secondary-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle">Admin</a>
          <ul class="dropdown-menu">
            <li><a href="/users">Users</a></li>
          </ul>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle">Account</a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="container">

  <div class="content">
    <%= yield %>
  </div>

  <footer>
    <p>&copy; Company 2011</p>
  </footer>

</div> <!-- /container -->

</body>
</html>
